# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-battery'

# Status bar right
set -g status-right '#{?client_prefix,#[bg=red fg=black],#{battery_status_bg}#{battery_color_status_fg}} Batt: #{battery_icon} #{battery_percentage}% | %a %d-%h %H:%M:%S '
set -g status-right-length 50

# Status bar left
set -g status-left '#{?client_prefix,#[bg=red fg=black],#{battery_status_bg}#{battery_color_status_fg}} Current: [#{session_name}] #[bg=default] '
set -g status-left-length 20

# Status bar
set -g status-style default
#set -g status-fg black
#set -g status '#{?client_prefix,#[bg=blue]}'
#set -g status-style '#{?client_prefix,#[bg=yellow fg=black],}'

# Generel settings
set -g status-justify centre
set -g set-titles on
set -g mouse on
set -g display-panes-time 2000


# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
