# Changes the default behavior of the `git` command to show a more readable log format.
git() {
  if [[ "$1" == "log" && "$#" -eq 1 ]]; then
    command git log --all --graph --pretty=format:'%C(magenta)%h %C(white)%an  %ar%C(auto) %D%n%s%n'
  else
    command git "$@"
  fi
}

# TMUX setup
if command -v tmux &> /dev/null && [ -z "$TMUX" ]; then
  if tmux has-session 2>/dev/null; then
    exec tmux attach
  else
    exec tmux
  fi
fi

# Adds a blank line before each prompt. Improves readability.
#PROMPT_COMMAND='echo "";'

# Starship setup
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"
eval "$(starship init bash)"

# Zoxide
eval "$(zoxide init bash)"

fastfetch
